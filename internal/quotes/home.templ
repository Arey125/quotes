package quotes

import "quotes/internal/ui"

templ home(userBadge templ.Component, quotes []Quote) {
	@ui.Base(userBadge) {
		<div class="container">
			<section class="section">
				<nav class="level">
					<h1 class="title">Quotes</h1>
					<a class="button is-primary" href="/quotes/create">
						Create
					</a>
				</nav>
				for _, quote := range quotes {
					<div class="card">
						<div class="card-content">
							{ quote.Content }
							<br/>
							{ quote.CreatedAt.String() }
                            <br/>
                            created by: 
							{ quote.CreatedBy }
						</div>
					</div>
				}
			</section>
		</div>
	}
}
